<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Metas | TaskFlow</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  {{> app-navbar}}

  <div class="mx-auto max-w-6xl px-4">
    <div class="grid min-h-[calc(100vh-56px-56px)] grid-cols-1 md:grid-cols-[240px_1fr]">
      {{> app-sidebar}}

      <main class="flex min-h-full flex-col p-4 md:p-6">
        <div class="mb-4 flex flex-col items-start justify-between gap-2 sm:flex-row sm:items-center">
          <h1 class="text-2xl font-bold tracking-tight">Metas</h1>
          <div class="flex items-center gap-2">
            <button id="btnRefresh" class="rounded border px-3 py-1 text-sm hover:bg-gray-50">Refrescar</button>
          </div>
        </div>

        <!-- Crear meta -->
        <section class="mb-4 rounded-lg border bg-white p-4">
          <h2 class="mb-3 text-lg font-semibold">Crear meta</h2>
          <form id="createGoalForm" class="grid gap-3 md:grid-cols-5">
            <input id="cg_title" type="text" placeholder="Título" class="h-10 w-full rounded border px-3 text-sm md:col-span-2" required />
            <input id="cg_desc" type="text" placeholder="Descripción" class="h-10 w-full rounded border px-3 text-sm md:col-span-2" />
            <input id="cg_due" type="date" class="h-10 w-full rounded border px-3 text-sm" required />
            <div class="md:col-span-5">
              <button class="rounded bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700">Crear</button>
              <span id="createMsg" class="ml-2 text-sm"></span>
            </div>
          </form>
        </section>

        <!-- Tabla de metas -->
        <section class="rounded-lg border bg-white">
          <div class="overflow-x-auto">
            <table class="w-full text-sm">
              <thead class="bg-gray-50 text-left">
                <tr>
                  <th class="px-3 py-2 font-medium">Título</th>
                  <th class="px-3 py-2 font-medium">Descripción</th>
                  <th class="px-3 py-2 font-medium">Vence</th>
                  <th class="px-3 py-2 font-medium">Tareas</th>
                  <th class="px-3 py-2 font-medium">Completada</th>
                  <th class="px-3 py-2 font-medium"></th>
                </tr>
              </thead>
              <tbody id="goalsTbody">
                <tr>
                  <td colspan="6" class="px-3 py-6 text-center text-gray-500">Cargando...</td>
                </tr>
              </tbody>
            </table>
          </div>
        </section>

        <div class="mt-2 text-xs text-gray-500" id="listMeta"></div>

        <template id="goalRowTpl">
          <tr class="border-t align-top">
            <td class="px-3 py-2">
              <input data-field="title" type="text" class="h-8 w-full rounded border px-2 text-sm" />
            </td>
            <td class="px-3 py-2">
              <input data-field="description" type="text" class="h-8 w-full rounded border px-2 text-sm" />
            </td>
            <td class="px-3 py-2">
              <input data-field="dueDate" type="date" class="h-8 rounded border px-2 text-sm" />
            </td>
            <td class="px-3 py-2">
              <div class="flex items-center gap-2">
                <span data-field="taskCount" class="text-xs text-gray-600">0 tareas</span>
                <button data-action="manageTasks" class="text-xs text-blue-600 hover:underline">Gestionar</button>
              </div>
            </td>
            <td class="px-3 py-2">
              <label class="inline-flex items-center gap-2 text-xs">
                <input data-field="completed" type="checkbox" class="h-4 w-4" />
                Completada
              </label>
            </td>
            <td class="px-3 py-2">
              <div class="flex items-center gap-2">
                <button data-action="save" class="rounded border px-3 py-1 text-xs hover:bg-gray-50">Guardar</button>
                <button data-action="toggle" class="rounded border px-3 py-1 text-xs hover:bg-gray-50">Finalizar</button>
                <button data-action="delete" class="hidden rounded border px-3 py-1 text-xs text-red-700 hover:bg-red-50">Eliminar</button>
                <span data-field="rowMsg" class="text-xs"></span>
              </div>
            </td>
          </tr>
        </template>
      </main>
    </div>
  </div>

  {{> app-footer}}
  {{> app-guard-scripts}}

  <script>
    const $ = (sel, ctx) => (ctx || document).querySelector(sel);

    function isAdminRole() {
      try {
        const t = window.TaskFlowAuth.getToken();
        const p = t ? window.TaskFlowAuth.decodeJwt(t) : null;
        return p?.role === "admin";
      } catch { return false; }
    }

    function toISODate(dateInput) {
      if (!dateInput) return undefined;
      try {
        const d = new Date(dateInput);
        if (isNaN(d.getTime())) return undefined;
        return d.toISOString();
      } catch { return undefined; }
    }

    function fromISOToDateInput(iso) {
      if (!iso) return "";
      try {
        const d = new Date(iso);
        if (isNaN(d.getTime())) return "";
        const m = String(d.getMonth() + 1).padStart(2, "0");
        const day = String(d.getDate()).padStart(2, "0");
        return d.getFullYear() + "-" + m + "-" + day;
      } catch { return ""; }
    }

    async function loadGoals() {
      const tbody = $("#goalsTbody");
      tbody.innerHTML = '<tr><td colspan="5" class="px-3 py-6 text-center text-gray-500">Cargando...</td></tr>';
      try {
        const resp = await window.apiFetch("/goals", { method: "GET" });
        const goals = resp?.data || [];
        renderGoals(goals);
      } catch (err) {
        tbody.innerHTML = '<tr><td colspan="6" class="px-3 py-6 text-center text-red-600">Error cargando metas: ' + (err.message || 'Error') + '</td></tr>';
      }
    }

    function renderGoals(goals) {
      const tbody = $("#goalsTbody");
      const tpl = $("#goalRowTpl");
      tbody.innerHTML = "";
      const admin = isAdminRole();

      if (!goals || !goals.length) {
        tbody.innerHTML = '<tr><td colspan="6" class="px-3 py-6 text-center text-gray-500">Aún no hay metas</td></tr>';
        $("#listMeta").textContent = "0 resultado(s)";
        return;
      }

      $("#listMeta").textContent = goals.length + " resultado(s)";

      goals.forEach(g => {
        const row = tpl.content.firstElementChild.cloneNode(true);

        const fTitle = $('[data-field="title"]', row);
        const fDesc = $('[data-field="description"]', row);
        const fDue = $('[data-field="dueDate"]', row);
        const fCompleted = $('[data-field="completed"]', row);
        const taskCount = $('[data-field="taskCount"]', row);
        const btnManageTasks = $('[data-action="manageTasks"]', row);
        const rowMsg = $('[data-field="rowMsg"]', row);
        const btnSave = $('[data-action="save"]', row);
        const btnToggle = $('[data-action="toggle"]', row);
        const btnDelete = $('[data-action="delete"]', row);

        fTitle.value = g.title || "";
        fDesc.value = g.description || "";
        fDue.value = fromISOToDateInput(g.dueDate);
        fCompleted.checked = !!g.completed;
        
        // Cargar contador de tareas
        loadTaskCount(g._id || g.id, taskCount);
        
        // Gestionar tareas
        btnManageTasks.addEventListener("click", () => {
          openTaskModal(g._id || g.id, g.title, taskCount);
        });

        if (admin) btnDelete.classList.remove("hidden");

        function updateToggleUI() {
          btnToggle.textContent = fCompleted.checked ? "Reabrir" : "Finalizar";
        }
        updateToggleUI();

        async function toggleComplete() {
          rowMsg.textContent = "Actualizando...";
          rowMsg.className = "text-xs text-gray-600";
          try {
            const newVal = !fCompleted.checked;
            await window.apiFetch("/goals/" + (g._id || g.id), {
              method: "PUT",
              body: JSON.stringify({ completed: newVal })
            });
            fCompleted.checked = newVal;
            updateToggleUI();
            rowMsg.textContent = "Actualizada";
            rowMsg.className = "text-xs text-green-600";
            setTimeout(() => (rowMsg.textContent = ""), 1500);
          } catch (err) {
            rowMsg.textContent = "Error: " + (err.message || "no se pudo actualizar");
            rowMsg.className = "text-xs text-red-700";
          }
        }
        btnToggle.addEventListener("click", toggleComplete);

        async function save() {
          rowMsg.textContent = "Guardando...";
          try {
            const body = {
              title: fTitle.value.trim(),
              description: fDesc.value.trim() || undefined,
              dueDate: fDue.value ? toISODate(fDue.value) : undefined,
              completed: !!fCompleted.checked
            };
            await window.apiFetch("/goals/" + (g._id || g.id), {
              method: "PUT",
              body: JSON.stringify(body)
            });
            rowMsg.textContent = "Actualizada";
            rowMsg.className = "text-xs text-green-600";
            setTimeout(() => rowMsg.textContent = "", 1500);
          } catch (err) {
            rowMsg.textContent = "Error: " + (err.message || "no se pudo actualizar");
            rowMsg.className = "text-xs text-red-700";
          }
        }

        btnSave.addEventListener("click", save);
        fCompleted.addEventListener("change", save);

        btnDelete.addEventListener("click", async () => {
          if (!confirm("¿Eliminar esta meta?")) return;
          rowMsg.textContent = "Eliminando...";
          try {
            await window.apiFetch("/goals/" + (g._id || g.id), { method: "DELETE" });
            row.remove();
          } catch (err) {
            rowMsg.textContent = "Error: " + (err.message || "no se pudo eliminar");
          }
        });

        tbody.appendChild(row);
      });
    }

    function setupCreateGoal() {
      const form = $("#createGoalForm");
      const msg = $("#createMsg");
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        msg.textContent = "Creando...";
        msg.className = "ml-2 text-sm text-gray-600";
        const title = $("#cg_title").value.trim();
        const description = $("#cg_desc").value.trim();
        const dueVal = $("#cg_due").value;

        const body = {
          title,
          description: description || undefined,
          dueDate: dueVal ? toISODate(dueVal) : undefined
        };

        try {
          await window.apiFetch("/goals", {
            method: "POST",
            body: JSON.stringify(body)
          });
          msg.textContent = "Creada";
          msg.className = "ml-2 text-sm text-green-600";
          $("#cg_title").value = "";
          $("#cg_desc").value = "";
          $("#cg_due").value = "";
          await loadGoals();
        } catch (err) {
          msg.textContent = "Error: " + (err.message || "no se pudo crear");
          msg.className = "ml-2 text-sm text-red-600";
        }
      });
    }

    async function loadTaskCount(goalId, countElement) {
      try {
        const tasks = await window.apiFetch(`/tasks?goal=${goalId}`, { method: "GET" });
        const count = tasks?.data?.length || 0;
        countElement.textContent = `${count} tarea${count !== 1 ? 's' : ''}`;
      } catch {
        countElement.textContent = "0 tareas";
      }
    }
    
    function openTaskModal(goalId, goalTitle, countElement) {
      // Crear modal simple
      const modal = document.createElement('div');
      modal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
      modal.innerHTML = `
        <div class="bg-white rounded-lg p-6 max-w-2xl w-full mx-4 max-h-[80vh] overflow-y-auto">
          <div class="flex justify-between items-center mb-4">
            <h3 class="text-lg font-semibold">Tareas de: ${goalTitle}</h3>
            <button id="closeModal" class="text-gray-500 hover:text-gray-700">×</button>
          </div>
          <div class="mb-4">
            <select id="availableTasks" class="w-full border rounded px-3 py-2 text-sm mb-2">
              <option value="">Seleccionar tarea existente...</option>
            </select>
            <button id="assignTask" class="bg-blue-600 text-white px-4 py-2 rounded text-sm hover:bg-blue-700">Asignar a Meta</button>
          </div>
          <div id="tasksList" class="space-y-2"></div>
        </div>
      `;
      
      document.body.appendChild(modal);
      
      // Eventos del modal
      modal.querySelector('#closeModal').onclick = () => {
        document.body.removeChild(modal);
      };
      
      modal.onclick = (e) => {
        if (e.target === modal) document.body.removeChild(modal);
      };
      
      // Cargar tareas existentes y disponibles
      loadGoalTasks(goalId);
      loadAvailableTasks(goalId);
      
      // Asignar tarea existente
      modal.querySelector('#assignTask').onclick = async () => {
        const taskId = modal.querySelector('#availableTasks').value;
        if (!taskId) return;
        
        try {
          await window.apiFetch(`/tasks/${taskId}`, {
            method: 'PUT',
            body: JSON.stringify({ goal: goalId })
          });
          modal.querySelector('#availableTasks').value = '';
          loadGoalTasks(goalId);
          loadAvailableTasks(goalId);
          loadTaskCount(goalId, countElement);
        } catch (err) {
          alert('Error al asignar tarea: ' + err.message);
        }
      };
      
      async function loadGoalTasks(goalId) {
        const tasksList = modal.querySelector('#tasksList');
        try {
          const tasks = await window.apiFetch(`/tasks?goal=${goalId}`, { method: "GET" });
          const taskData = tasks?.data || [];
          
          tasksList.innerHTML = taskData.map(task => `
            <div class="flex items-center justify-between p-2 border rounded">
              <div class="flex items-center gap-2">
                <input type="checkbox" ${task.completed ? 'checked' : ''} 
                       onchange="toggleTask('${task._id}', this.checked, '${goalId}')">
                <span class="${task.completed ? 'line-through text-gray-500' : ''}">${task.title}</span>
              </div>
              <button onclick="unassignTask('${task._id}', '${goalId}')" 
                      class="text-orange-600 hover:text-orange-800 text-sm">Desasignar</button>
            </div>
          `).join('');
        } catch {
          tasksList.innerHTML = '<p class="text-gray-500 text-sm">Error cargando tareas</p>';
        }
      }
      
      // Funciones globales para los eventos inline
      window.toggleTask = async (taskId, completed, goalId) => {
        try {
          await window.apiFetch(`/tasks/${taskId}`, {
            method: 'PUT',
            body: JSON.stringify({ completed })
          });
          loadGoalTasks(goalId);
        } catch (err) {
          alert('Error al actualizar tarea');
        }
      };
      
      window.unassignTask = async (taskId, goalId) => {
        if (!confirm('¿Desasignar esta tarea de la meta?')) return;
        try {
          await window.apiFetch(`/tasks/${taskId}`, {
            method: 'PUT',
            body: JSON.stringify({ goal: null })
          });
          loadGoalTasks(goalId);
          loadAvailableTasks(goalId);
          loadTaskCount(goalId, countElement);
        } catch (err) {
          alert('Error al desasignar tarea');
        }
      };
      
      async function loadAvailableTasks(goalId) {
        const select = modal.querySelector('#availableTasks');
        try {
          // Cargar tareas sin meta asignada
          const tasks = await window.apiFetch('/tasks', { method: "GET" });
          const availableTasks = tasks?.data?.filter(task => !task.goal) || [];
          
          // Limpiar opciones existentes excepto la primera
          select.innerHTML = '<option value="">Seleccionar tarea existente...</option>';
          
          availableTasks.forEach(task => {
            const option = document.createElement('option');
            option.value = task._id;
            option.textContent = task.title;
            select.appendChild(option);
          });
        } catch {
          select.innerHTML = '<option value="">Error cargando tareas</option>';
        }
      }
    }

    document.addEventListener("DOMContentLoaded", () => {
      $("#btnRefresh").addEventListener("click", loadGoals);
      setupCreateGoal();
      loadGoals();
    });
  </script>
</body>
</html>
